---
import Layout from "../layouts/Layout.astro";
import RecipeCard from "../components/RecipeCard.astro";
---

<Layout title="Drew's Recipe Box">
	<main class="m-auto p-4 text-xl w-full max-w-5xl">
		<h1 class="text-6xl font-bold mt-6 mb-8">Drew's Recipe Box</h1>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
			<RecipeCard
				imageUrl="/food-pictures/sweet-potato-gnocchi.jpg"
				title="Brown Butter Sweet Potato Gnocchi"
				time="45 minutes"
			/>
			<RecipeCard
				title="Chicken Satay & Peanut Sauce"
			/>
			<RecipeCard
				title="Kofte"
			/>
			<RecipeCard
				title="Biscotti"
			/>
		</div>
	</main>
</Layout>
